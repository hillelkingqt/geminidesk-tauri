{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "GeminiDesk",
  "version": "8.1.3",
  "identifier": "com.hillel.geminiapp",
  "build": {
    "frontendDist": "../html"
  },
  "app": {
    "windows": [
      {
        "title": "GeminiDesk",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": "default-src 'self'; frame-src https://gemini.google.com https://aistudio.google.com; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "background": null,
        "windowSize": {
          "width": 600,
          "height": 400
        }
      }
    },
    "windows": {
      "nsis": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
