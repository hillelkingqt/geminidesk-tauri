{
  "name": "gemini-desk",
  "version": "8.1.3",
  "description": "Gemini Desktop Wrapper",
  "author": {
    "name": "Hillel BH",
    "email": "geminidesksupport@proton.me"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "browse": "node browser.js",
    "build": "electron-builder",
    "test": "jest"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "archiver": "^5.3.2",
    "auto-launch": "^5.0.6",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "jsdom": "^24.0.0",
    "katex": "^0.16.9",
    "marked": "^16.1.2",
    "node-fetch": "^2.7.0",
    "pdfkit": "^0.14.0",
    "sound-play": "^1.1.0"
  },
  "build": {
    "appId": "com.hillel.geminiapp",
    "productName": "GeminiDesk",
    "files": [
      "**/*",
      "!release{,/**}",
      "!dist{,/**}",
      "!out{,/**}",
      "!coverage{,/**}",
      "!**/{test,tests,__tests__}{,/**}",
      "!**/{example,examples,sample,samples,demo}{,/**}",
      "!**/*.{map,md,markdown}",
      "!**/.git{,/**}",
      "!**/.github{,/**}",
      "!**/.vscode{,/**}",
      "!node_modules/electron{,/**}"
    ],
    "extraResources": [
      "0.5.8_0/**",
      "icons/**"
    ],
    "asar": true,
    "compression": "maximum",
    "publish": [
      {
        "provider": "github",
        "owner": "hillelkingqt",
        "repo": "GeminiDesk"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": null,
      "format": "UDZO",
      "title": "${productName}-${version}-${arch}",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "include": "installer.nsh",
      "license": "build/EULA.txt"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "icons/icon1.png"
    },
    "icon": "icons/icon1.png"
  }
}
